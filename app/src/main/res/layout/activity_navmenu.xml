<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="70dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".uiActivities.NavMenuActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo" />

    <!-- Add Expense -->
    <Button
        android:id="@+id/buttonAddExpense"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:text="Add Expense"
        android:padding="10dp"
        android:layout_marginBottom="30dp"/>

    <!-- Set Goal -->
    <Button
        android:id="@+id/buttonSetGoal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:text="Set Goal"
        android:padding="10dp"
        android:layout_marginBottom="30dp"/>

    <!-- View Expenses -->
    <Button
        android:id="@+id/buttonViewExpense"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:text="View Expenses"
        android:padding="10dp"
        android:layout_marginBottom="30dp"/>

    <!-- View Totals -per category -->
    <Button
        android:id="@+id/buttonViewTotals"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:text="Category Total"
        android:padding="10dp"
        android:layout_marginBottom="30dp"/>
</LinearLayout>



