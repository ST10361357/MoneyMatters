<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".uiActivities.CategoryExpenseActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo" />

    <!-- App Name -->
    <TextView
        android:id="@+id/textViewBudgetTracker"
        android:layout_width="400dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="Money Matters - Add Expense"
        android:textAlignment="center"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo" />

    <!-- Expense Name -->
    <EditText
        android:id="@+id/expenseName"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="70dp"
        android:hint="Enter Expense Name"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/textViewBudgetTracker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Expense Description -->
    <EditText
        android:id="@+id/expenseDescription"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="100dp"
        android:hint="Enter Expense Description"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:gravity="start|top"
        app:layout_constraintTop_toBottomOf="@id/expenseName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Expense Amount -->
    <EditText
        android:id="@+id/expenseAmount"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:hint="R0.00"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/expenseDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Expense Category -->
    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/expenseAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Expense Date -->
    <Button
        android:id="@+id/expenseDateButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Select Date"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/categorySpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


        <!-- Start Time Button -->
        <Button
            android:id="@+id/expenseStartTimeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select Start Time"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text"
            app:layout_constraintTop_toBottomOf="@id/expenseDateButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/expenseEndTimeButton"/>

        <!-- End Time Button -->
        <Button
            android:id="@+id/expenseEndTimeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select End Time"
            android:layout_marginStart="12dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text"
            app:layout_constraintTop_toBottomOf="@id/expenseDateButton"
            app:layout_constraintStart_toEndOf="@id/expenseStartTimeButton"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Add Photo Button -->
    <Button
        android:id="@+id/addPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Add Photo"
        android:backgroundTint="@color/button_background"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@id/expenseEndTimeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/expenseImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/addPhotoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Submit Button -->
    <Button
        android:id="@+id/buttonSubmitExpense"
        android:layout_width="340dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Submit Expense"
        android:backgroundTint="@color/button_background"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@id/addPhotoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>